# Nic's custom stuff - add this to bottom of i3 config
# ----------------------------------------------------

# Keystroke repeat delay
exec_always xset r rate 210 70

# Natural Scrolling
exec --no-startup-id synclient HorizEdgeScroll=1 VertEdgeScroll=1 VertScrollDelta=-111

# Remap <Caps> to <Esc>
exec_always xmodmap -e "clear lock" #disable caps lock switch
exec_always xmodmap -e "keysym Caps_Lock = Escape" #set caps_lock as escape

# Logout
bindsym $mod+Shift+e exec sh -c '[ $(echo "YES" | dmenu -sb "#4982b7" -i -p "EXIT?") = "YES" ] && i3-msg exit'

# Lock screen
bindsym $mod+Shift+x exec i3lock

# Auto lock screen
exec --no-startup-id xautolock -time 5 -locker i3lock &

# Focus does not follow mouse
focus_follows_mouse no

# Mute toggle
bindsym XF86AudioMute exec "amixer -D pulse set Master 1+ toggle"

